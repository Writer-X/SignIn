<?xml version="1.0" encoding="utf-8"?>   
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"   
    android:layout_width="fill_parent"   
    android:layout_height="fill_parent"   
    android:orientation="vertical"
    android:background="@drawable/background2" >   
     
  <Button  
     android:layout_marginTop="20dp"
     android:id="@+id/nfc_open"
     android:layout_x="25dip" 
     android:layout_y="25dip" 
     android:layout_width="230dp"
     android:layout_height="40dp" 
     android:text="打开" 
     android:background="@drawable/button_style"
     android:textColor="@color/white" 
     android:textSize="20sp"
     android:layout_gravity="center"
     />        
  <Button  
     android:layout_marginTop="20dp"
     android:id="@+id/nfc_read"
     android:layout_x="35dip" 
     android:layout_y="25dip" 
     android:layout_width="230dp"
     android:layout_height="40dp"
     android:text="读取" 
     android:background="@drawable/button_style"
     android:textColor="@color/white" 
     android:textSize="20sp"
     android:layout_gravity="center"
     />          
  <Button  
     android:layout_marginTop="20dp"
     android:id="@+id/nfc_exit"
     android:layout_x="35dip" 
     android:layout_y="25dip" 
     android:layout_width="230dp"
     android:layout_height="40dp"
     android:text="退出" 
     android:background="@drawable/button_style"
     android:textColor="@color/white" 
     android:textSize="20sp"
     android:layout_gravity="center"
     />     
    
 <LinearLayout
     android:layout_marginTop="20dp"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:gravity="center"
     android:layout_gravity="center"
     android:orientation="horizontal" >
 <TextView  
     android:id="@+id/password_twice_register"
     android:layout_x="20dip" 
     android:layout_y="100dip" 
     android:layout_width="wrap_content"  
     android:layout_height="wrap_content"  
     android:text="NFC扫描结果：" 
     android:textColor="@color/black"
     android:textSize="20sp"
     /> 

 <TextView
     android:id="@+id/nfc_result"
     android:layout_width="wrap_content"  
     android:width="1000dp"  
     android:layout_height="wrap_content"  
     android:textSize="20sp"
     /> 
</LinearLayout>      

</LinearLayout>   